<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Appdoctruyen_v2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dark mode -->
    <!-- Screen background if dark mode on -->
    <style name="Screen">
        <item name="android:background">@color/black</item>
    </style>


    <style name="TextColor">
        <item name="android:textColor">#ffffff</item>
    </style>


    <!-- Toolbar background -->
    <style name="Toolbar">
        <item name="android:background">#000000</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <!-- Bottom Navigation -->
    <!-- Màu chữ và icon khi bình thường và khi được chọn -->
    <style name="BottomNavigation">
        <item name="itemTextColor">@color/nav_item_color_dark</item>
        <item name="itemIconTint">@color/nav_item_color_dark</item>
        <item name="android:background">@color/black</item>
    </style>


    <!-- Icon ngôi nhà trong activity_main_tim_kiem -->
    <style name="IconColor">
        <item name="tint">@color/white</item>
    </style>


    <!-- Icon trong Account fragment -->
    <style name="AccountIcon">
        <item name="android:tint">@color/white</item>
    </style>
</resources>